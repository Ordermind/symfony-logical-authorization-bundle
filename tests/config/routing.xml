<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="xml_route_no_permissions" path="/xml-no-permissions">
        <default key="_controller">Ordermind\LogicalAuthorizationBundle\Test\Fixtures\Controller\XmlController::routeXmlAction</default>
    </route>
    <route id="xml_route" path="/route-xml">
        <default key="_controller">Ordermind\LogicalAuthorizationBundle\Test\Fixtures\Controller\XmlController::routeXmlAction</default>
    </route>
    <route id="xml_route_role" path="/route-xml-role">
        <default key="_controller">Ordermind\LogicalAuthorizationBundle\Test\Fixtures\Controller\XmlController::routeXmlRoleAction</default>
        <permissions>
            <role>ROLE_ADMIN</role>
        </permissions>
    </route>
    <route id="xml_route_allowed" path="/route-xml-allowed">
        <default key="_controller">Ordermind\LogicalAuthorizationBundle\Test\Fixtures\Controller\XmlController::routeXmlAllowedAction</default>
        <permissions>TRUE</permissions>
    </route>
    <route id="xml_route_denied" path="/route-xml-denied">
        <default key="_controller">Ordermind\LogicalAuthorizationBundle\Test\Fixtures\Controller\XmlController::routeXmlDeniedAction</default>
        <permissions>FALSE</permissions>
    </route>
</routes>
