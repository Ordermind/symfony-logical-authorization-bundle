    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>

    <field name="field1" column="field1" type="string" length="255">
      <logical-authorization>
        <get>
          <role>ROLE_ADMIN</role>
          <flag>is_author</flag>
        </get>
        <set>
          <role>ROLE_ADMIN</role>
          <flag>is_author</flag>
        </set>
