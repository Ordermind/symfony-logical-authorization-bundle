    </field>

    <field name="field2" column="field2" type="string" length="255" />

    <field name="field3" column="field3" type="string" length="255" />

    <many-to-one field="author" target-document="Ordermind\LogicalAuthorizationBundle\Tests\ODM\Fixtures\Document\User\TestUser">
      <join-column name="author_id" referenced-column-name="id" />
    </many-to-one>
  </document>
</doctrine-mapping>

